@model dkPortfolio.Models.Account
@{
    ViewBag.Title = "OptionsAdmin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="icerik">
    <h4>Admin Options</h4>
    <form action="/Admin/OptionsAdmin?id=@Model.ID" method="post">
        <div class="form-group">
            <label for="usr">Name:</label>
            <input type="text" name="Name" value="@Model.Name" class="form-control" id="usr">
        </div>
        <br />
        <div class="form-group">
            <label for="usr">Surname:</label>
            <input type="text" name="Surname" value="@Model.Surname" class="form-control" id="usr">
        </div>
        <br />
        <div class="form-group">
            <label for="usr">Birthday:</label>
            <input type="datetime" name="Birthday" value="@Model.Birthday" class="form-control" id="usr">
        </div>
        <br />
        <div class="form-group">
            <label for="usr">Email:</label>
            <input type="email" name="Email" value="@Model.Email" class="form-control" id="usr">
        </div>
        <br />
        <div class="form-group">
            <label for="pwd">Password:</label>
            <input type="text" name="Password" value="@Model.Password" class="form-control" id="pwd">
        </div>
        <br />
        <div class="form-group">
            <label for="pwd">Address:</label>
            <input type="text" name="Address" value="@Model.Address" class="form-control" id="pwd">
        </div>
        <br />
        <div class="form-group">
            <label for="pwd">Phone:</label>
            <input type="tel" name="Phone" value="@Model.Phone" class="form-control" id="pwd">
        </div>
        <br />
        <div class="form-group">
            <label for="pwd">About :</label>
            <input type="text" name="About" value="@Model.About" class="form-control" id="pwd">
        </div>
        <br />
        <div class="form-group">
            <label for="pwd">Short About:</label>
            <input type="text" name="ShortAbout" value="@Model.ShortAbout" class="form-control" id="pwd">
        </div>
        <br />
        <div class="form-group">
            <img src="@Model.Picture.Path" class="responsive" style="height:150px;width:130px;" />
        </div>
        <br />
        <div class="form-group">
            <label for="pwd">Picture Url:</label>
            <input type="url" name="PictureUrl" value="@Model.Picture.Path" class="form-control" id="pwd">
        </div>
        <br />
        <div class="form-group">
            <button type="submit">Save</button>
        </div>
    </form>

    <table class="table">
        <tr>
            <th>Technology</th>
            <th>Value</th>
            <th>Edit</th>
        </tr>
        @{
            List<dkPortfolio.Models.Link> linklist = ViewBag.social;
        }
        @foreach (dkPortfolio.Models.Link item in linklist)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Url</td>
                <td>
                    <form action="/Admin/LinkD?id=@item.ID" method="post">
                        <button class="btn btn-default" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </table>

    <form action="/Admin/OptionsLink" method="post">
        <tr>
            <td>
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">Platform Name</span>
                    <input type="text" class="form-control" name="Name" aria-describedby="basic-addon1">
                </div>
            </td>
            <td>
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">Link</span>
                    <input type="text" class="form-control" name="Url" aria-describedby="basic-addon1">
                </div>
            </td>
            <td>
                <button type="submit" class="btn btn-default" aria-label="Left Align">Add</button>
            </td>
        </tr>
    </form>
        @*ID, Name, Surname, Birthday, Email, Password, Address, Phone, About, ShortAbout, PictureID, isAdmin*@

</div>