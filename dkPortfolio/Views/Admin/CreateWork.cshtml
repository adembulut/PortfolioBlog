
@{
    ViewBag.Title = "CreateWork";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="icerik">
    <h2>CreateWork</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Work</h4>
            <hr />
            <form role="form" method="post" action="/Admin/CreateWork">

                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">Work Name</span>
                    <input type="text" name="Name" class="form-control" aria-describedby="basic-addon1">
                </div>
                <br />
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">Work Type</span>
                    <input type="text" name="Type" class="form-control" placeholder="Project Type : EX: Mobile,Web vs" aria-describedby="basic-addon1">
                </div>
                <br />
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">Short Text</span>
                    <input type="text" name="Text" class="form-control" aria-describedby="basic-addon1">
                </div>
                <br />
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">Optional Url</span>
                    <input type="text" name="Url" class="form-control" placeholder="Url" value="##" aria-describedby="basic-addon1">
                </div>
                <br />
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">Picture Url</span>
                    <input type="text" name="PictureUrl" class="form-control" placeholder="Example :http://placehold.it/350x150" aria-describedby="basic-addon1">
                </div>
                <br />
                <div class="form-group" style="margin:0 5px;">
                    <label for="comment">Long Description:</label>
                    <textarea class="form-control" rows="5" name="LongText"></textarea>
                </div>
                <br />
                <div class="form-group" style="margin:0 5px;">
                        <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    }
</div>
<div>
    @Html.ActionLink("Back to List", "ListWork")
</div>
